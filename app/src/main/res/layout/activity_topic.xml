<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tonyzanyar.knowledge.TopicActivity">

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测一测"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="@drawable/shape"
        app:layout_constraintRight_toLeftOf="@+id/another_topic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_text" />

    <Button
        android:id="@+id/another_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="换一换"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/test"
        app:layout_constraintRight_toRightOf="@+id/content_text"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/topic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="话题"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/content_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="内容"
        android:background="@drawable/shape"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/test"
        app:layout_constraintTop_toBottomOf="@+id/topic_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
